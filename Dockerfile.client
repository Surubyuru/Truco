# Multi-stage build para el cliente React
FROM node:20-alpine AS builder

WORKDIR /app

# Copiar package.json
COPY client/package*.json ./

# Instalar dependencias
RUN npm install

# Copiar el c贸digo del cliente
COPY client/ ./

# Build de producci贸n
RUN npm run build

# Etapa de producci贸n con nginx
FROM nginx:alpine

# Copiar la configuraci贸n de nginx
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Copiar los archivos buildados desde la etapa anterior
COPY --from=builder /app/dist /usr/share/nginx/html

# Exponer puerto 80
EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
